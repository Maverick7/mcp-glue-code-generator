{
    "name": "mcp-glue-code-generator",
    "version": "1.0.0",
    "description": "MCP Server that generates Zod schemas to map API responses to Vue Design System components with live UI previews",
    "type": "module",
    "main": "build/index.js",
    "bin": {
        "mcp-glue-code-generator": "build/index.js"
    },
    "scripts": {
        "build": "tsc",
        "start": "node build/index.js",
        "dev": "tsx watch src/index.ts",
        "prepublishOnly": "npm run build"
    },
    "keywords": [
        "mcp",
        "mcp-server",
        "model-context-protocol",
        "mcp-ui",
        "zod",
        "vue",
        "react",
        "design-system",
        "api-mapping",
        "schema-generator",
        "ai-tools"
    ],
    "author": "",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/Maverick7/mcp-glue-code-generator"
    },
    "homepage": "https://github.com/Maverick7/mcp-glue-code-generator#readme",
    "bugs": {
        "url": "https://github.com/Maverick7/mcp-glue-code-generator/issues"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "files": [
        "build",
        "samples",
        "README.md"
    ],
    "dependencies": {
        "@mcp-ui/server": "^5.16.0",
        "@modelcontextprotocol/sdk": "^1.0.0",
        "cors": "^2.8.5",
        "express": "^4.21.0",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/node": "^22.0.0",
        "tsx": "^4.19.0",
        "typescript": "^5.6.0"
    }
}